    <!--
        Added the entity Vehicle.
    -->
    <changeSet id="20221203073856-1" author="jhipster">
        <createTable tableName="vehicle" remarks="Vehicle (vehicle) entity.\n@author Ibrahim Mohamed.">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="govid" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="plate" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="rfid" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_vehicle__rfid" />
            </column>
            <column name="driver" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="producer" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="model" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="year" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="color" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="decals" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="spoilers" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="glass" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="chassis_serial" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="motor_serial" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="vehicle_license_serial" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="vehicle_license_type" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="vehicle_type" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="wanted" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="license_revoked" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="license_expired" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="jurisdiction" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="updated" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="fuel_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="motor_cc" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="license_issued" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="license_expires" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="wt_kg" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="passengers" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="tractor_parts" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="extra_size_percent" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="wt_extra" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="bike_data" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="wanted_by" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="wanted_for" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="office" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="status_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="stolen" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="vehicle" columnName="updated" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="vehicle" columnName="license_issued" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="vehicle" columnName="license_expires" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="vehicle" columnName="stolen" columnDataType="${datetimeType}"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

